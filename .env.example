# LLM Configuration - supports openai, anthropic, openrouter, azure
LLM_MODEL=openrouter/openai/gpt-4o-mini
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Azure OpenAI Configuration (only needed if using LLM_MODEL=azure/deployment-name)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4  # Optional: default deployment name
